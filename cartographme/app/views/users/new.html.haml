%h2
  %p.login= link_to 'Log-in to Cartographme', login_path

%h1 Sign-up 
%h2
  -unless @user ==nil
    -if @user.errors.any?
      %ul
      -@user.errors.full_messages.each do |msg|
        %li #{msg}

%h2
  = form_tag users_path, :id=>'signup_form', :method=> 'post' do
  
    = label :user, :name, 'Name'
    = text_field :user, 'name'
  
    = label :user, :email, 'Email'
    = text_field :user, 'email'
  
    = label :user, :password, 'Password'
    = password_field :user, 'password'
  
    = label :user, :password_confirmation, 'Password_confirmation'
    = password_field :user, 'password_confirmation'
    %h2
    = submit_tag 'Create my account', :class => "button" 