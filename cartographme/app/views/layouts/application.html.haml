!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    %script{:src => "//maps.google.com/maps/api/js?key=#{ENV["GMAP_API_KEY"]}"}
    %script{:src => "//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"}
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = include_gon
    = csrf_meta_tags
    
  %body
    %h1.title Cartographme
    #main
      = button_to "Home", home_index_path, :method => :get, :id => 'home_button', :class => "button" 
      - if flash[:notice]
        #notice.flash_message= flash[:notice]
      - elsif flash[:warning]
        #warning.flash_message= flash[:warning]
        
      -if @current_user
        
        = button_to 'Logout', logout_path , :method => :delete , :id => 'logout', :class => "button" 
       
      -else
        = button_to 'Sign up/Login', login_path , :method => :get, :id => 'signuplogin', :class => "button" 
      
    = yield
