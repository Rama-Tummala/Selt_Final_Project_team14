%h2
  %p.login=link_to 'Sign_up for Cartographme',signup_path

%h1 Log-in: 

%h2
  = form_tag sessions_path, :method => 'post' do

    = label :session, :user, 'Email'
    = text_field :session, 'email'

    = label :session, :password, 'Password'
    = password_field :session, 'password'

    %h2
      = submit_tag 'Log in', :class => "button" 
